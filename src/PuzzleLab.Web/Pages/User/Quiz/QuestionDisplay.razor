@using PuzzleLab.Shared.DTOs.QuizSession

@code {
    [Parameter] public QuestionWithAnswerDto Question { get; set; } = null!;
    [Parameter] public int SelectedAnswerIndex { get; set; } = -1;
    [Parameter] public EventCallback<int> OnAnswerSelected { get; set; }
}

<div class="p-6">
    <div class="space-y-6">
        <!-- Question Text -->
        <div class="text-lg font-medium text-gray-900">
            @Question.Text
        </div>

        <!-- Question Image (if present) -->
        @if (Question.ImageData != null && Question.ImageData.Length > 0)
        {
            <div class="flex justify-center my-4">
                <img
                    src="data:@Question.ImageMimeType;base64,@Convert.ToBase64String(Question.ImageData)"
                    alt="Question Image"
                    class="max-w-full max-h-96 rounded-lg shadow-md border border-gray-200"/>
            </div>
        }

        <!-- Answer Options -->
        <div class="space-y-3">
            <p class="font-medium text-gray-700">Select your answer:</p>
            <div class="space-y-2">
                @for (int i = 0; i < Question.Answers.Length; i++)
                {
                    string answer = Question.Answers[i].Text;
                    int index = i; // Capture the index value for the lambda
                    <div @onclick="() => OnAnswerSelected.InvokeAsync(index)"
                         class="border @(SelectedAnswerIndex == index ? "border-blue-500 bg-blue-50" : "border-gray-300 hover:bg-gray-50")
                                rounded-lg p-4 cursor-pointer transition-colors">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <div
                                    class="w-5 h-5 border @(SelectedAnswerIndex == index ? "border-blue-600" : "border-gray-400") rounded-full flex items-center justify-center">
                                    @if (SelectedAnswerIndex == index)
                                    {
                                        <div class="w-3 h-3 rounded-full bg-blue-600"></div>
                                    }
                                </div>
                            </div>
                            <div class="ml-3">
                                <p class="text-base text-gray-900">@answer</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
