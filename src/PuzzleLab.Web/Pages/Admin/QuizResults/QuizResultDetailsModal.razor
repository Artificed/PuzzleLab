@using PuzzleLab.Shared.DTOs.QuizSession

<div class="@(IsVisible ? "fixed inset-0 bg-black/80 flex items-center justify-center z-50" : "hidden")">
    <div class="bg-white rounded-lg shadow-lg p-6 max-w-2xl w-full mx-4 max-h-screen overflow-y-auto">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-bold">Quiz Result Details</h2>
            <button @onclick="OnClose" class="text-gray-400 hover:text-gray-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>

        @if (Result != null)
        {
            <div class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="space-y-2">
                        <h3 class="font-semibold text-gray-700">User</h3>
                        <p>@Result.Username</p>
                    </div>
                    <div class="space-y-2">
                        <h3 class="font-semibold text-gray-700">Quiz</h3>
                        <p>@Result.QuizName</p>
                    </div>
                    <div class="space-y-2">
                        <h3 class="font-semibold text-gray-700">Score</h3>
                        <div class="flex items-center">
                            <div class="mr-3 w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                                <span class="font-bold text-blue-700">@Result.ScorePercentage.ToString("0")%</span>
                            </div>
                            <span
                                class="text-gray-600">(@Result.CorrectAnswers of @Result.TotalQuestions correct)</span>
                        </div>
                    </div>
                    <div class="space-y-2">
                        <h3 class="font-semibold text-gray-700">Completion Time</h3>
                        <p>@FormatTimeSpan(Result.CompletionTime)</p>
                    </div>
                </div>

                <div class="space-y-2">
                    <h3 class="font-semibold text-gray-700">Date Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm text-gray-500">Quiz Started</p>
                            <p>@Result.ScheduleStartDate.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Quiz Completed</p>
                            <p>@Result.QuizCompletedDate.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>

                <div class="pt-4 border-t border-gray-200">
                    <div class="relative pt-1">
                        <div class="flex mb-2 items-center justify-between">
                            <div>
                                <span
                                    class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-blue-600 bg-blue-200">
                                    Performance
                                </span>
                            </div>
                            <div class="text-right">
                                <span class="text-xs font-semibold inline-block text-blue-600">
                                    @Result.ScorePercentage.ToString("0.##")%
                                </span>
                            </div>
                        </div>
                        <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-blue-100">
                            <div style="width:@(Result.ScorePercentage.ToString("0.##"))%"
                                 class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-blue-600">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-6 flex justify-end">
                <button @onclick="OnClose"
                        class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-950 focus-visible:ring-offset-1 disabled:pointer-events-none disabled:opacity-50 border border-gray-200 bg-white hover:bg-gray-100 h-10 px-4 py-2">
                    Close
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public bool IsVisible { get; set; }

    [Parameter] public QuizResultDto Result { get; set; } = new QuizResultDto();

    [Parameter] public EventCallback OnClose { get; set; }

    private string FormatTimeSpan(TimeSpan time)
    {
        if (time.TotalHours >= 1)
        {
            return $"{(int)time.TotalHours}h {time.Minutes}m {time.Seconds}s";
        }
        else if (time.TotalMinutes >= 1)
        {
            return $"{time.Minutes}m {time.Seconds}s";
        }
        else
        {
            return $"{time.Seconds}s";
        }
    }

}
