@page "/login"

<PageTitle>Login</PageTitle>

<div class="flex flex-col w-full items-center justify-center border-1 rounded-xl max-w-1/3 p-6 gap-4">
    <h2 class="text-3xl">Sign In</h2>
    <form class="flex flex-col w-full gap-3">
        <div class="flex flex-col gap-1">
            <label for="email" class="text-black">Email</label>
            <input id="email" name="email" type="text" class="bg-white border border-black rounded-lg w-full px-2 py-2"/>
        </div>
        <div class="flex flex-col gap-1">
            <label for="password" class="text-black">Password</label>
            <input id="password" name="password" type="password" class="bg-white border border-black rounded-lg w-full px-2.5 py-2"/>
        </div>
        <button class="bg-black text-white px-2.5 py-2 mt-2 rounded-lg cursor-pointer">Log In</button>
    </form>
</div>

